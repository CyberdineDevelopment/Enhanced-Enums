<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <PackageReference Include="ColorOption.Library" Version="1.0.0" />
    <PackageReference Include="Red.Library" Version="1.0.0" />
    <PackageReference Include="Blue.Library" Version="1.0.0" />
    <!-- Enhanced Enums cross-assembly source generator -->
    <ProjectReference Include="..\..\..\src\FractalDataWorks.EnhancedEnums.CrossAssembly\FractalDataWorks.EnhancedEnums.CrossAssembly.csproj" 
                      OutputItemType="Analyzer" 
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
    
    <!-- Emit generated files to disk for debugging -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>GeneratedFiles</CompilerGeneratedFilesOutputPath>
    <!-- Custom generator output for Enhanced Enums (optional) -->
    <GeneratorOutPutTo>GeneratedFiles\EnhancedEnums</GeneratorOutPutTo>
  </PropertyGroup>
  <ItemGroup>    
    <!-- Exclude generated files from compilation to prevent double compilation -->
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
    <!-- Exclude any GeneratedFiles directories from compilation -->
    <Compile Remove="GeneratedFiles/**/*.cs" />
    <None Remove="GeneratedFiles/**/*" />
  </ItemGroup>

</Project>
