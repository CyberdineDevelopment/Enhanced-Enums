<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- Enable generated file emission for debugging -->
    <EmitGeneratorFiles>true</EmitGeneratorFiles>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>GeneratedFiles</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\FractalDataWorks.EnhancedEnums\FractalDataWorks.EnhancedEnums.csproj" 
                      OutputItemType="Analyzer" 
                      ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\..\..\src\FractalDataWorks\FractalDataWorks.csproj" />
    <ProjectReference Include="..\Services.Notification\Services.Notification.csproj" />
    <ProjectReference Include="..\Services.Notification.Sms\Services.Notification.Sms.csproj" />
    <ProjectReference Include="..\Services.Notification.Email\Services.Notification.Email.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Exclude generated files from compilation to prevent double compilation -->
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>
  
  <!-- Clean generated files before build -->
  <Target Name="CleanGeneratedFiles" BeforeTargets="BeforeBuild">
    <RemoveDir Directories="$(CompilerGeneratedFilesOutputPath)" Condition="Exists('$(CompilerGeneratedFilesOutputPath)')" />
  </Target>

</Project>
